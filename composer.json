{
    "name": "konceiver/laravel-validation-rules",
    "description": "Common validation rules for Laravel",
    "keywords": [
        "konceiver",
        "laravel-validation-rules"
    ],
    "homepage": "https://github.com/konceiver/laravel-validation-rules",
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Brian Faust",
            "email": "hello@konceiver.dev",
            "homepage": "https://konceiver.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.0",
        "illuminate/support": "^8.0",
        "mpociot/vat-calculator": "^2.4",
        "spatie/laravel-package-tools": "^1.9"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "graham-campbell/analyzer": "^3.0",
        "orchestra/testbench": "^6.0",
        "phpstan/phpstan": "^0.12.11"
    },
    "autoload": {
        "psr-4": {
            "Konceiver\\ValidationRules\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Konceiver\\ValidationRules\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-html=.coverage --coverage-clover=clover.xml",
        "format": "vendor/bin/php-cs-fixer fix ./",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
